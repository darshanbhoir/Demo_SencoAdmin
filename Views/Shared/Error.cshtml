<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Error</title>
</head>
<body>
    <hgroup>
        <h1>Error.</h1>
        <h2>An error occurred while processing your request.</h2>
    </hgroup>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <script>
        alert('@ViewBag.ErrorMessage');
        </script>
    }
</body>
</html>
